<% provide(:title, "Edit User") %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h1><%= t('update_profile') %></h1>

<div class="flex-column justify-content-center align-items-center">
  <div class="row align-items-center justify-content-center">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <% @user.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
  
      <div class="form-group">
          <strong><%= f.label :name %></strong>
          <%= f.text_field :name, class: 'form-control' %><br>
        </div>
      <div class="form-group">
        <strong><%= f.label :email %></strong>
        <%= f.email_field :email, class: 'form-control' %><br>
      </div>
      <div class="form-group">
        <strong><%= f.label :password %></strong>
        <%= f.password_field :password, class: 'form-control' %><br>
      </div>
      <div class="form-group">
       <strong> <%= f.label :password_confirmation, "Confirmation" %></strong>
        <%= f.password_field :password_confirmation, class: 'form-control' %><br>
      </div>
      <div class="form-group">
        <%= f.submit "Save changes", class: "btn btn-primary" %>
      </div>
  
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
  </div>
</div>
